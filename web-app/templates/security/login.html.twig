{% extends 'base.html.twig' %}

{% block title %}{{ 'signIn'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <div>
            <form method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                <input type="hidden" name="_target_path" value="{{ app.request.get('redirect_to') }}">

                {% if error %}
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                {% endif %}

                <div class="row justify-content-center row-cols-1 mx-auto">
                    <div class="col-auto">
                        <h4 class="text-muted font-weight-normal">{{ 'login'|trans }}:</h4>
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group mb-1 col-7 mx-auto">
                        <input value="{{ last_username }}"
                               type="email"
                               name="email"
                               class="form-control rounded-pill"
                               placeholder="{{ 'email'|trans }}"
                               required
                               autofocus
                        />
                    </div>
                </div>
                <div class="form-group justify-content-center">
                    <div class="input-group mb-1 col-7 mx-auto">
                        <input type="password"
                               name="password"
                               class="form-control rounded-pill"
                               placeholder="{{ 'password'|trans }}"
                               required
                        />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-5 mx-auto">
                        <button class="btn btn-primary btn-block" type="submit">{{ 'signIn'|trans }}</button>

                        <a class="mx-5" href="{{ path('registration') }}">{{ 'register'|trans }}</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
